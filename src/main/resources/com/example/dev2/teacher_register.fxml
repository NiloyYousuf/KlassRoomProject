<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dev2.TeacherRegistrationController">
    <children>
        <Text layoutX="200.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Register as a teacher">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
        <TextField fx:id="usernameField" layoutX="200.0" layoutY="100.0" promptText="Enter your name" />
        <TextField fx:id="emailField" layoutX="200.0" layoutY="150.0" promptText="Enter your email" />
        <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="200.0" promptText="Password" />
        <PasswordField fx:id="confirmPasswordField" layoutX="200.0" layoutY="250.0" promptText="Confirm password" />
        <Button fx:id="signUpButton" layoutX="200.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleSignUp" text="Sign Up" />
        <Button layoutX="300.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleBackToRegistration" text="Back to Registration" />
    </children>
</AnchorPane>

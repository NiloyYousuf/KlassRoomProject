<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="415.0" prefWidth="670.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentUploadAssignment.StudentUploadAssignmentController">
    <children>
      <AnchorPane prefHeight="412.0" prefWidth="695.0">
         <children>
              <VBox spacing="10" />
              <VBox layoutX="66.0" layoutY="72.0" prefHeight="175.0" prefWidth="538.0" spacing="5">
                  <Label fx:id="assignmentTextLabel" alignment="TOP_LEFT" prefHeight="112.0" prefWidth="538.0" text="Assignment Text: " wrapText="true" />
               <HBox prefHeight="50.0" prefWidth="538.0">
                  <children>
                        <Label fx:id="assignDateLabel" prefHeight="50.0" prefWidth="538.0" text="Assign Date: " />
                        <Label fx:id="deadlineLabel" prefHeight="44.0" prefWidth="538.0" text="Deadline: " />
                  </children>
               </HBox>
              </VBox>
               <Button layoutX="78.0" layoutY="299.0" mnemonicParsing="false" onAction="#uploadAssignment" text="Upload Assignment" />
               <Label fx:id="statusLabel" layoutX="34.0" layoutY="258.0" prefHeight="18.0" prefWidth="225.0" />
            <Button fx:id="Download" layoutX="453.0" layoutY="312.0" mnemonicParsing="false" onAction="#downloadAttachment" text="Download Attachment" />
            <Label fx:id="attachmentStatusLabel" layoutX="464.0" layoutY="290.0" text="Available Attachment" />
             <Label fx:id="uploadedFileNameLabel" layoutX="74.0" layoutY="277.0" text="Name of File Uploaded: " />
             <Button fx:id="unsubmitButton" layoutX="104.0" layoutY="334.0" mnemonicParsing="false" onAction="#unsubmitAssignment" text="Unsubmit" />
               <Label fx:id="classroomCodeLabel" layoutX="351.0" layoutY="16.0" prefHeight="34.0" prefWidth="238.0" text="Classroom Code: ">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
               <Label fx:id="teacherUsernameLabel" layoutX="66.0" layoutY="16.0" prefHeight="34.0" prefWidth="250.0" text="Teacher's Username: ">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
    </children>
</HBox>

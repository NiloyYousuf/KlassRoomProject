    <!-- Add a TextArea for entering new comments -->
    <TextArea fx:id="newCommentTextArea" layoutY="7.0" prefHeight="38.0" prefWidth="395.0" promptText="Enter your comment here" text="Make Comment" />
   <ScrollPane layoutX="7.0" layoutY="53.0" prefHeight="200.0" prefWidth="495.0">
      <content>
      
                      <!-- The VBox for displaying existing comments -->
          <VBox fx:id="commentVBox" prefHeight="194.0" prefWidth="492.0" spacing="10" />
      </content>
   </ScrollPane>
   <Button fx:id="postButton" layoutX="401.0" layoutY="13.0" mnemonicParsing="false" text="Post" />
</AnchorPane>

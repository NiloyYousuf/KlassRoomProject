<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="479.0" prefWidth="578.0" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.klassroom.CreateAssignmentController">
    <Label text="Create Assignment" />
    <DatePicker fx:id="assignDate" promptText="Assign Date" />
    <DatePicker fx:id="deadline" promptText="Deadline" />
    <TextField fx:id="marks" promptText="Marks" />
    <TextArea fx:id="assignmentText" prefHeight="111.0" prefWidth="478.0" promptText="Assignment Text" />
    <Label fx:id="selectedFileLabel" text="Selected File" />
    <Button onAction="#chooseFile" text="Add Attachment" />
    <Button onAction="#postAssignment" text="Post Assignment" />
</VBox>

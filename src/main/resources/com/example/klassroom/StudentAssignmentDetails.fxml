    <Label text="Assignment Details" />
    <Label fx:id="assignmentTextLabel" />
    <Label fx:id="assignDateLabel" />
    <Label fx:id="deadlineLabel" />
    <Label fx:id="teacherLabel" />
    <TextArea fx:id="submissionText" promptText="Your Submission" />

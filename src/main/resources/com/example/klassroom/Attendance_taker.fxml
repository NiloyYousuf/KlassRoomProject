<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.cell.CheckBoxTableCell?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.klassroom.ClassroomAttendanceController">
    <children>
        <TableView fx:id="studentTable" layoutX="20.0" layoutY="20.0" prefHeight="300.0" prefWidth="400.0">
            <columns>
                <TableColumn text="Student Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="studentName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Mark Attendance">
                    <cellValueFactory>
                        <PropertyValueFactory property="attendance" />
                    </cellValueFactory>
                    <cellFactory>
                    </cellFactory>
                </TableColumn>

            </columns>
        </TableView>
        <Button layoutX="20.0" layoutY="330.0" onAction="#markAttendance" text="Mark Attendance" />
    </children>
</AnchorPane>

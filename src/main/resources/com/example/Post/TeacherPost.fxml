<AnchorPane prefHeight="303.0" prefWidth="812.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teacher.TeacherPostController">
   <children>
      <Label fx:id="Time" layoutX="82.0" layoutY="63.0" text="Time" />
      <Label fx:id="Date" layoutX="676.0" layoutY="63.0" text="Date" />
      <TextArea fx:id="Post" editable="false" layoutX="82.0" layoutY="87.0" prefHeight="81.0" prefWidth="630.0" text="Post" />
      <TextField fx:id="AttachmentLabel" editable="false" layoutX="247.0" layoutY="185.0" />
      <Button fx:id="Download" layoutX="405.0" layoutY="185.0" mnemonicParsing="false" onAction="#handleDownloadButton" text="Download Attachment" />
      <Button layoutX="75.0" layoutY="26.0" mnemonicParsing="false" onAction="#Go_back" styleClass="back-button" stylesheets="@../styles.css" text="Back" />
      <!-- Add a new VBox for comments -->
      <VBox fx:id="commentVBox" layoutX="85.0" layoutY="229.0" prefHeight="74.0" prefWidth="590.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Comments : " />
         </children></VBox>
      <Button fx:id="deleteButton" layoutX="637.0" layoutY="173.0" mnemonicParsing="false" onAction="#handleDeleteButton" text="Delete" />
   </children>
</AnchorPane>
